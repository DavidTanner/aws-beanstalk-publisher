<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

  <f:entry title="AWS credentials" field="credentials">
    <f:select />
  </f:entry>
    
  <f:entry title="AWS Region" field="awsRegion">
    <f:enum field="awsRegion">
        ${it.getName()}
    </f:enum>
  </f:entry>
  
  <f:entry title="AWS Region Text" field="awsRegionText">
    <f:textbox />
  </f:entry>
    
  <f:entry title="Application Name" field="applicationName">
    <f:textbox />
  </f:entry>
  <f:validateButton
   title="${%Get Available Applications}" progress="${%Loading...}"
   method="loadApplications" with="credentials,awsRegion" />
  
  <f:validateButton
   title="${%Get Available Environments}" progress="${%Loading...}"
   method="loadEnvironments" with="credentials,awsRegion,applicationName" />
  
  <f:entry title="Version Label Format" field="versionLabelFormat">
    <f:textbox />
  </f:entry>
  
  <f:entry title="Fail if any failures" field="failOnError">
    <f:checkbox />
  </f:entry>
  
  <f:entry title="${%Additional Behaviors}">
    <!-- TODO: switch to <f:repeatableHeteroList field="extensions"> -->
    <f:hetero-list name="extensions" oneEach="true" items="${instance.extensions}" descriptors="${descriptor.getExtensionDescriptors()}"
                   hasHeader="true" />
  </f:entry>

</j:jelly>